generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//define a tabela no banco
model Passageiro {
  id               String      @id @default(uuid())
  nome             String
  cpf              String      @unique
  senha            String
  cep              String
  rua              String
  contato          String
  horario_embarque DateTime
  id_motorista     String
  motorista        Motorista   @relation(fields: [id_motorista], references: [id])
  ativo            Boolean     @default(true)
  dta_insert       DateTime
  tipo_usuario_id  String
  tipo             TipoUsuario @relation(fields: [tipo_usuario_id], references: [id])
  email            String
}

model Operador {
  id              String      @id @default(uuid())
  nome            String
  email           String
  senha           String
  empresa         String
  tipo_usuario_id String
  tipo            TipoUsuario @relation(fields: [tipo_usuario_id], references: [id])
}

model Motorista {
  id              String       @id @default(uuid())
  nome            String
  cpf             String
  contato         String
  email           String
  senha           String
  tipo_usuario_id String
  tipo            TipoUsuario  @relation(fields: [tipo_usuario_id], references: [id])
  Passageiro      Passageiro[]
}

model Empresa {
  id       String @id @default(uuid())
  fantasia String
  cnpj     String
}

model TipoUsuario {
  id          String       @id @default(uuid())
  descricao   String
  passageiros Passageiro[]
  operadores  Operador[]
  motoristas  Motorista[]
}
